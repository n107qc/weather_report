<Weather>
    padding: 4
    size_hint: None, None
    size: "400dp", "450dp"

    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            id: date_text
            text: 'Зараз'
            adaptive_size: True
            color: "yellow"
            pos_hint: {"center_x":0.5}
            font_style: 'H4'
            
        MDLabel:
            id: desc_text
            text: 'Хмарно'
            adaptive_size: True
            color: "yellow"
            pos_hint: {"center_x":0.5}
            font_style: 'H4'
            bold: True

        AsyncImage:
            id: weather_icon
            pos_hint:{"center_x":0.5}
            source: "https://openweathermap.org/img/wn/10d@2x.png"
            size_hint: (None,None)
            height: "150sp"
            width: "150sp"
            fit_mode: 'contain'
            font_style: 'H5'
            
        MDLabel:
            id: temp_text
            text: '21°C'
            adaptive_size: True
            color: "yellow"
            pos_hint: {"center_x":0.5}
            font_style: 'H4'
            bold: True
        MDLabel:
            id: rain_text
            text: 'Ймовірність опадів: 20%'
            adaptive_size: True
            color: "yellow"
            pos_hint: {"center_x":0.5}
            font_style: 'H4'
        MDLabel:
            id: wind_text
            text: 'Швидкість вітру 20м/с'
            adaptive_size: True
            color: "yellow"
            pos_hint: {"center_x":0.5}
            font_style: 'H4'
            


        MDIconButton:
            icon: "dots-vertical"
            pos_hint: {"top": 1, "right": 1}

        
<Mainscreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '20sp'
        
        MDTopAppBar:
            title: 'Weather'
            left_action_items: [['menu', lambda x: app.callback()]]
        
        MDBoxLayout:
            padding: '20sp'
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5}
            orientation: 'vertical'
            spacing: '25sp'
            
            MDBoxLayout:
                size_hint: 1, None
                height: '40sp'
                orientation: 'horizontal'
                spacing: '20sp'
                
                MDTextField:
                    id: city_field
                    hint_text: 'Ведіть місто'
                    mode: 'fill'
                
                MDIconButton:
                    id: search_btn
                    icon: 'magnify'
                    theme_icon_color: 'Custom'
                    icon_color: app.theme_cls.primary_color
                    on_press: root.weather_search()
            
            MDCarousel:
                id: weather_carousel
                direction: 'right'
                padding:10
                size_hint: 0.9, 0.8
