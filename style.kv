<Weather>
    padding: 4
    size_hint: None, None
    size: "200dp", "100dp"

    MDRelativeLayout:
        

        MDIconButton:
            icon: "dots-vertical"
            pos_hint: {"top": 1, "right": 1}

        MDLabel:
            id: label
            text: 'GG'
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True

<Mainscreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '20sp'
        
        MDTopAppBar:
            title: 'Weather'
            left_action_items: [['menu', lambda x: app.callback()]]
        
        MDBoxLayout:
            padding: '20sp'
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5}
            orientation: 'vertical'
            spacing: '25sp'
            
            MDBoxLayout:
                size_hint: 1, None
                height: '40sp'
                orientation: 'horizontal'
                spacing: '20sp'
                
                MDTextField:
                    id: city_field
                    hint_text: 'Ведіть місто'
                    mode: 'fill'
                
                MDIconButton:
                    id: search_btn
                    icon: 'magnify'
                    theme_icon_color: 'Custom'
                    icon_color: app.theme_cls.primary_color
                    on_press: root.weather_search()
            
                Weather:
                    id: weather_card